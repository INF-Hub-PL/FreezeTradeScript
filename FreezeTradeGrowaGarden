-- Tween for Progress Bar
local TweenService = game:GetService("TweenService")
local function animateProgressBar()
	local tweenInfo = TweenInfo.new(30, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
	local tween = TweenService:Create(progressFill, tweenInfo, { Size = UDim2.new(1, 0, 1, 0) })
	tween:Play()
	tween.Completed:Connect(function()
		wait(0.2)
		freezeButton.Text = "Trade Frozen"
		freezeButton.AutoButtonColor = false
		wait(5)
		freezeButton.Text = "❄️ Freeze Trade"
		freezeButton.AutoButtonColor = true
		progressFill.Size = UDim2.new(0, 0, 1, 0)
	end)
end

-- Button click behavior
freezeButton.MouseButton1Click:Connect(function()
	if playerInput.Text == "" then
		freezeButton.Text = "Enter the player's name first!"
		wait(2)
		freezeButton.Text = "❄️ Freeze Trade"
		return
	end
	animateProgressBar()
end)

-- Dragging support (Mouse + Mobile Touch)
local UserInputService = game:GetService("UserInputService")
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
	local delta = input.Position - dragStart
	mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

title.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = mainFrame.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		update(input)
	end
end)
